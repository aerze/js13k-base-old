{
  "name": "js13k-base",
  "version": "0.0.1",
  "description": "Boilerplate template for making very small games",
  "main": "index.js",
  "scripts": {
    "h": "webpack -h",
    "start": "npm run build:dev & npm run serve:dev",
    "serve:dev": "static -H '{\"Cache-Control\": \"no-cache, must-revalidate\"}' ./build",
    "build:dev": "webpack -w --env=dev --progress --profile --colors",

    "package": "npm run build:prod & npm run serve:prod",
    "serve:prod": "static -z -H '{\"Cache-Control\": \"no-cache, must-revalidate\"}' ./dist",
    "build:prod": "webpack --env=prod --progress --profile --colors",

    "tiny-music-maker": "npm run build:tiny-music-maker & npm run serve:tiny-music-maker",
    "serve:tiny-music-maker": "static -H '{\"Cache-Control\": \"no-cache, must-revalidate\"}' ./tools/tiny-music-maker/dist",
    "build:tiny-music-maker": "webpack -w --env=dev --progress --profile --colors --config=./tools/tiny-music-maker/webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aerze/js13k-base.git"
  },
  "keywords": [
    "js13k",
    "boilerplate",
    "game",
    "js",
    "13k"
  ],
  "author": "Gus Suarez <gus@mythril.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aerze/js13k-base/issues"
  },
  "homepage": "https://github.com/aerze/js13k-base#readme",
  "devDependencies": {
    "compression-webpack-plugin": "^0.4.0",
    "eslint": "^4.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "html-webpack-plugin": "^2.28.0",
    "node-static": "^0.7.9",
    "webpack": "^2.6.1",
    "webpack-closure-compiler": "^2.1.4"
  }
}
